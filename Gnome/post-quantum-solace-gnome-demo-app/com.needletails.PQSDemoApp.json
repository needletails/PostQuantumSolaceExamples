{
  "app-id": "com.needletails.PQSDemoApp",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift6"
  ],
  "command": "PQSDemoApp",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/swift6/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/swift6/lib"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "PQSDemoApp",
      "builddir": true,
      "buildsystem": "simple",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "build-commands": [
        "swift build -c debug --static-swift-stdlib",
        "strip .build/debug/PQSDemoApp",
        "install -Dm755 .build/debug/PQSDemoApp /app/bin/PQSDemoApp",
        "install -Dm644 data/com.needletails.PQSDemoApp.metainfo.xml $DESTDIR/app/share/metainfo/com.needletails.PQSDemoApp.metainfo.xml",
        "install -Dm644 data/com.needletails.PQSDemoApp.desktop $DESTDIR/app/share/applications/com.needletails.PQSDemoApp.desktop",
        "install -Dm644 data/icons/com.needletails.PQSDemoApp.svg $DESTDIR/app/share/icons/hicolor/scalable/apps/com.needletails.PQSDemoApp.svg",
        "install -Dm644 data/icons/com.needletails.PQSDemoApp-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/com.needletails.PQSDemoApp-symbolic.svg"
      ]
    }
  ]
}
